@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (!Model.Any())
{
    <text>No movies to display</text>
}
else
{

    <ul>
        @foreach (var i in Model)
        {
            <li>@Html.ActionLink(i.Name, "Details", "Movies", new {id = i.Id}, null)</li>
        }
    </ul>
}
