@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(i => i.Customer.Name)
        @Html.TextBoxFor(i => i.Customer.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(i => i.Customer.Name)
    </div>
    <div class="form-group">
        <label for="BirthDate">Date of Birth</label>
        @Html.TextBoxFor(i => i.Customer.BirthDate, "{0:d MMM yyyy}", new {@class = "form-control"})
        @Html.ValidationMessageFor(i => i.Customer.BirthDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(i => i.Customer.MembershipTypeId)
        @Html.DropDownListFor(i => i.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new {@class = "form-control"})
        @Html.ValidationMessageFor(i => i.Customer.MembershipTypeId)
    </div>
    <div class="form-check">
        @Html.CheckBoxFor(i => i.Customer.IsSubscribedToNewsletter, new {@class = "form-check-input"})
        @Html.Label("Subscribed to Newsletter", new {@class = "form-check-label"})
    </div>

    if (HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString() != "New")
    {
        @Html.HiddenFor(i => i.Customer.Id)
    }
    <button type="submit" class="btn btn-primary">Save</button>


}